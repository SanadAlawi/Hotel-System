<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/receptionistActivity_ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/receptionistActivity_tv_receptionistID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/receptionist_id"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/receptionistActivity_tv_receptionistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/receptionist_name"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/receptionistActivity_tv_receptionistService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receptionist Service"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>