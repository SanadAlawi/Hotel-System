<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NormalRoomActivity"
    android:padding="10dp"
    style="@style/LLstyle">


    <TextView
        android:id="@+id/normalRoomActivity_tv_picture1"
        style="@style/LOGTVstyle"
        android:layout_marginTop="32dp"
        android:text="@string/SuitePictures"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/normalRoomActivity_lv_suitePhotos"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/normalRoomActivity_tv_picture1"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/normalRoomActivity_im_Photo0"
                android:layout_width="400dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/normalRoomActivity_im_Photo1"
                android:layout_width="350dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/normalRoomActivity_im_Photo2"
                android:layout_width="400dp"
                android:layout_height="match_parent" />

        </LinearLayout>
    </HorizontalScrollView>


    <TextView
        android:id="@+id/normalRoomActivity_tv_suiteInformation"
        style="@style/LOGTVstyle"
        android:layout_marginTop="52dp"
        android:text="@string/suiteInformation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/normalRoomActivity_lv_suitePhotos" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/normalRoomActivity_tv_suiteInformation"
        tools:layout_editor_absoluteX="3dp">

        <TextView
            android:id="@+id/normalRoomActivity_tv_suiteBed"
            style="@style/LOGTVstyle"
            android:text="@string/bed" />

        <TextView
            android:id="@+id/normalRoomActivity_tv_suiteroom"
            style="@style/LOGTVstyle"
            android:text="@string/roomBed" />

        <!--        <TextView-->
        <!--            android:id="@+id/textView"-->
        <!--            android:text="3_info....."-->
        <!--            style="@style/LOGTVstyle"/>-->
    </LinearLayout>

    <TextView
        style="@style/LOGTVstyle"
        android:text="@string/select_date"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.573" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="164dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/normalRoomActivity_tv_dateStart"
            style="@style/LOGTVstyle"
            android:background="#35200c"
            android:hint="@string/start_date"
            android:onClick="StartDate"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:textColorHint="#FDFDFD"
            tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/normalRoomActivity_tv_dateEnd"
            style="@style/LOGTVstyle"
            android:layout_marginLeft="100dp"
            android:background="#35200c"
            android:hint="@string/end_date"
            android:onClick="EndDate"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:textColor="#FBFAFA"
            android:textColorHint="#FDFDFD"
            tools:ignore="MissingConstraints,TouchTargetSizeCheck"
            tools:layout_editor_absoluteX="255dp"
            tools:layout_editor_absoluteY="555dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="9dp">

        <TextView
            android:id="@+id/normalRoomActivity_tv_costPerDay"
            style="@style/LOGTVstyle"
            android:text="salaryPerDay"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="619dp" />

        <TextView
            android:id="@+id/normalRoomActivity_tv_totalCost"
            style="@style/LOGTVstyle"
            android:layout_marginLeft="100dp"
            android:text="Total salary"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="240dp"
            tools:layout_editor_absoluteY="618dp" />

    </LinearLayout>

    <Button
        android:id="@+id/normalRoomActivity_btn_reserveButton"
        style="@style/Bstyle"
        android:onClick="Reserve"
        android:text="@string/reserve"
        app:cornerRadius="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.747" />


</androidx.constraintlayout.widget.ConstraintLayout>