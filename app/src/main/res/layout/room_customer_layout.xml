<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/roomLayout_cv_cardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/customerRoomLayout_ll_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/customerRoomLayout_iv_roomImage"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@color/gold" />

            <ImageView
                android:id="@+id/customerRoomLayout_iv_favorite"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="291dp"
                android:layout_marginTop="147dp"
                android:layout_marginEnd="23dp"
                android:src="@drawable/ic_favorite_border" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/customerRoomLayout_tv_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/customerRoomLayout_tv_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/customerRoomLayout_tv_roomNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/room_id"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <RatingBar
            android:id="@+id/customerRoomLayout_rb_rating"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:numStars="5"
            android:progressTint="@color/gold"
            android:rating="3"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textAlignment="textEnd" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
